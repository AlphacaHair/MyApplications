<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/teal_200">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/boy" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스크롤로 숫자 고르기" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center">

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_blue"
            android:id="@+id/myBall1"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_gray"
            android:id="@+id/myBall2"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_green"
            android:id="@+id/myBall3"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_purple"
            android:id="@+id/myBall4"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_red"
            android:id="@+id/myBall5"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_yellow"
            android:id="@+id/myBall6"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <NumberPicker
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/numberPicker"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_input_add"
            android:id="@+id/btn_add"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_delete"
            android:id="@+id/btn_clear"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="6개 숫자를 선택하세요"
        android:id="@+id/txt_message"
        android:textSize="32sp"
        android:gravity="center"/>

    <ImageView
        android:layout_gravity="right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/girl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center">

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_blue"
            android:id="@+id/randomBall1"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_gray"
            android:id="@+id/randomBall2"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_green"
            android:id="@+id/randomBall3"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_purple"
            android:id="@+id/randomBall4"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_red"
            android:id="@+id/randomBall5"
            android:gravity="center"/>

        <TextView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/ic_baseline_circle_yellow"
            android:id="@+id/randomBall6"
            android:gravity="center"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/robot"
        android:id="@+id/btnPlay"/>

</LinearLayout>